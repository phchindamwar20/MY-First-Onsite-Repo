    <description>STAR-6264 - Updates the job commission calculations for job commissions not paid when the multiplier changes</description>
    <environments>Default</environments>
    <formulas>
        <name>forC_ActualDepositFirstPaymentAmount</name>
        <dataType>Currency</dataType>
        <expression>IF(
   TEXT({!$Record.Actual_Commissionable__c})= &apos;Yes&apos; &amp;&amp;  TEXT({!$Record.Actual_DepositFirst_Payment_Met__c})= &apos;Yes&apos;,
    {!$Record.Job_Amount__c} * {!$Record.Split_Multiplier__c} * {!$Record.Actual_Deposit_1st_Payment_Incentive__c} / 100,
    0
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>forC_ActualQuickCollectionPayment</name>
        <dataType>Currency</dataType>
        <expression>IF (
    TEXT({!$Record.Actual_Commissionable__c}) = &apos;Yes&apos; &amp;&amp; TEXT({!$Record.Actual_Quick_Collection_Met__c}) = &apos;Yes&apos;,
    {!$Record.Job_Amount__c} * {!$Record.Split_Multiplier__c} * {!$Record.Actual_Quick_Collection_Incentive__c} / 100,
    0
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>forC_ActualSlowCollectionPayment</name>
        <dataType>Currency</dataType>
        <expression>IF(
    TEXT({!$Record.Actual_Commissionable__c})= &apos;Yes&apos; &amp;&amp; TEXT({!$Record.Actual_Slow_Collection_Met__c}) = &apos;Yes&apos;,
    {!$Record.Job_Amount__c} * {!$Record.Split_Multiplier__c} * {!$Record.Actual_Slow_Collection_Incentive__c} / 100,
    0
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>forC_ActualTotalCollectionPayment</name>
        <dataType>Currency</dataType>
        <expression>{!forC_ActualQuickCollectionPayment} + {!forC_ActualSlowCollectionPayment}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>forC_ActualTotalCommissionPayment</name>
        <dataType>Currency</dataType>
        <expression>{!forC_ActualDepositFirstPaymentAmount} + {!forC_ActualQuickCollectionPayment} + {!forC_ActualSlowCollectionPayment}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>forC_ActualTotalCommissionPercent</name>
        <dataType>Number</dataType>
        <expression>100 * {!forC_ActualTotalCommissionPayment} / {!$Record.Job_Amount__c}</expression>
        <scale>4</scale>
    </formulas>
    <formulas>
