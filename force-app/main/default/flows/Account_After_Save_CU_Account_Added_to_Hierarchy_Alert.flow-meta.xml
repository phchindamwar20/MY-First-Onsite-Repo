    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>actionSendEmail</targetReference>
        </connector>
        <filterFormula>AND(
  {!$Setup.DataAdmin__c.TurnOffFlow__c} = false, 
  NOT(ISBLANK({!$Record.The_Ultimate_Parent_Account__c})),
  {!$Record.The_Ultimate_Parent_Account__c} != {!$Record.Id},
  NOT({!$Record.RecordType.Name} = &quot;Property&quot;),
  {!$User.Id} != {!$Record.The_Ultimate_Parent_Account__r.OwnerId},
  OR(
    AND(
      NOW() - {!$Record.CreatedDate} &gt;= 0.00005787037,
      ISCHANGED({!$Record.ParentId})
    ),
    AND(
      NOW() - {!$Record.CreatedDate} &lt; 0.00005787037,
      ISCHANGED({!$Record.The_Ultimate_Parent_Account__c})
    )
  )
)</filterFormula>
        <object>Account</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <textTemplates>
